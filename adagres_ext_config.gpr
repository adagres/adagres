--  Configuration for adagres generated by Alire
abstract project Adagres_Ext_Config is

   Postgres_Bindir := external("POSTGRES_BINDIR");
   Postgres_Bin := Postgres_Bindir & "/postgres";
   Postgres_IncludeDir := external("POSTGRES_INCLUDEDIR");

   package Compiler is
      for Switches ("C") use ("-I", Postgres_IncludeDir);
   end Compiler;

end Adagres_Ext_Config;
